/**
 * Definition for singly-linked list.
 * class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) {
 *         val = x;
 *         next = null;
 *     }
 * }
 */
public class Solution {
    public boolean hasCycle(ListNode head) {
        HashSet<ListNode> hset = new HashSet<>();
        ListNode itr = head;
        while (true) {
            if (itr == null)
                return false;
            if (hset.contains(itr))
                return true;
            hset.add(itr);
            itr = itr.next;
        }
    }
}